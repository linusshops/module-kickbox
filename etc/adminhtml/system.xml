        <tab id="linusshops" translate="label" sortOrder="500">
            <label>LinusShops</label>
        </tab>
        <section id="linusshops_kickbox" translate="label" type="text" showInDefault="1" showInWebsite="1" showInStore="1" sortOrder="60">
            <label>Kickbox</label>
            <tab>linusshops</tab>
            <resource>LinusShops_Kickbox::config</resource>
            <group id="general" translate="label" type="text" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>General</label>
                <field id="api_key" translate="label" type="text" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Kickbox API Key</label>
                </field>
            </group>
        </section>
    </system>
</config>
